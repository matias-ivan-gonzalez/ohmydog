<h1>Registro</h1>

<%= form_for(@user) do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :surname %>
    <%= f.text_field :surname %>
  </div>

  <div>
    <%= f.label :dni %>
    <%= f.text_field :dni %>
  </div>

  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>    

  <div>
    <%= f.submit 'Registrarse' %>
  </div>
<% end %>